<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import java.net.URL?>

<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.wsu.nova.homework_5_nsmith.controllers.GameListController">

    <!-- Stylesheet -->
    <stylesheets>
        <URL value = "@../stylesheets/video-game-theme.css"/>
    </stylesheets>

    <!-- Main vertical layout -->
    <VBox spacing="20.0"
          AnchorPane.topAnchor="20.0"
          AnchorPane.leftAnchor="20.0"
          AnchorPane.rightAnchor="20.0"
          AnchorPane.bottomAnchor="20.0">

        <!-- Header + filter row -->
        <HBox spacing="20.0" alignment="CENTER_LEFT">
            <Label text="Game Library">
                <font>
                    <Font size="28.0"/>
                </font>
            </Label>

            <HBox spacing="10.0" HBox.hgrow="ALWAYS" alignment="CENTER_LEFT">
                <Label text="Filter by title:"/>
                <TextField fx:id="TitleToFilterByText"
                           promptText="Enter title..."
                           HBox.hgrow="ALWAYS"/>
                <Button fx:id="FilterButton"
                        text="Filter"
                        onAction="#filterGamesByTitle"/>
            </HBox>
        </HBox>

        <!-- Main content: list on left, details on right -->
        <HBox spacing="20.0" VBox.vgrow="ALWAYS">

            <!-- Left: games list -->
            <VBox spacing="8.0" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                <Label text="Games"/>
                <ListView fx:id="VideoGamePOJOList"
                          VBox.vgrow="ALWAYS"/>
            </VBox>

            <!-- Right: details card -->
            <VBox spacing="10.0" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                <Label text="Details"/>

                <GridPane VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets top="15.0" right="20.0" bottom="15.0" left="20.0"/>
                    </padding>

                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" prefWidth="120.0"/>
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>

                    <rowConstraints>
                        <RowConstraints prefHeight="30.0"/>
                        <RowConstraints prefHeight="30.0"/>
                        <RowConstraints prefHeight="30.0"/>
                        <RowConstraints prefHeight="30.0"/>
                        <RowConstraints prefHeight="30.0"/>
                    </rowConstraints>

                    <Label text="Game Title:" GridPane.rowIndex="0"/>
                    <Text fx:id="TitleDisplayText"
                          text="—"
                          styleClass="detail-text"
                          GridPane.columnIndex="1"/>

                    <Label text="Release Date:" GridPane.rowIndex="1"/>
                    <Text fx:id="DateDisplayText"
                          text="—"
                          styleClass="detail-text"
                          GridPane.columnIndex="1"
                          GridPane.rowIndex="1"/>

                    <Label text="Developer(s):" GridPane.rowIndex="2"/>
                    <Text fx:id="DeveloperDisplayText"
                          text="—"
                          styleClass="detail-text"
                          GridPane.columnIndex="1"
                          GridPane.rowIndex="2"/>

                    <Label text="Publisher(s):" GridPane.rowIndex="3"/>
                    <Text fx:id="PublisherDisplayText"
                          text="—"
                          styleClass="detail-text"
                          GridPane.columnIndex="1"
                          GridPane.rowIndex="3"/>

                    <Label text="Console(s):" GridPane.rowIndex="4"/>
                    <Text fx:id="ConsoleDisplayText"
                          text="—"
                          styleClass="detail-text"
                          GridPane.columnIndex="1"
                          GridPane.rowIndex="4"/>
                </GridPane>
            </VBox>
        </HBox>

        <!-- Bottom: action buttons -->
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <Button fx:id="AddNewGameButton"
                    text="Add New Game"
                    onAction="#switchToGameAdder"/>

            <Button fx:id="EditGameButton"
                    text="Edit Selected Game"
                    onAction="#switchToEditor"/>

            <Button fx:id="DeleteGameButton"
                    text="Delete Selected Game"
                    onAction="#deleteSelectedGame"/>

            <Button fx:id="ExportCSVButton"
                    text="Export Games as CSV"
                    onAction="#exportGamesToCSV"/>
        </HBox>
    </VBox>
</AnchorPane>
