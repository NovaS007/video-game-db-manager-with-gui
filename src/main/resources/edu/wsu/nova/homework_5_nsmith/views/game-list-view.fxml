<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="584.0"
            prefWidth="798.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.wsu.nova.homework_5_nsmith.controllers.GameListController">
   <ListView fx:id="VideoGamePOJOList"
             layoutX="14.0"
             layoutY="14.0"
             prefHeight="558.0"
             prefWidth="434.0" />
   <VBox alignment="CENTER"
         layoutX="493.0"
         layoutY="14.0"
         prefHeight="558.0"
         prefWidth="291.0"
         spacing="20.0">
         <Button fx:id="AddNewGameButton"
                 mnemonicParsing="false"
                 onAction="#switchToGameAdder"
                 text="Add New Game" />
         <Button fx:id="EditGameButton"
                 mnemonicParsing="false"
                 onAction="#switchToEditor"
                 text="Edit Selected Game" />
         <Button fx:id="DeleteGameButton"
                 mnemonicParsing="false"
                 onAction="#deleteSelectedGame"
                 text="Delete Selected Game" />
   </VBox>
</AnchorPane>
